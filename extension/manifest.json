{
  "manifest_version": 3,
  "name": "ClickFeedback",
  "description": "Rightâ€‘click any element to give contextual feedback with screenshots and DOM selectors.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["contextMenus", "activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "ClickFeedback"
  }
}
